<% if user_signed_in? %>
  <div class="jumbotron">
  <h2>Welcome Back</h2>
  <p style="font-size: 19px;">Share and browse recipes with other people! Mark recipes that you have finished cooking as complete to let others know what recipes are on the stove. Happy cooking! </p>
  </div>
<% else %>
  <div class="jumbotron">
  <h1>Welcome to Fedup</h1>
  <p>Share and browse recipes with other people! Mark recipes that you have finished cooking as complete to let others know what recipes are on the stove. Happy cooking! </p>
  <p>
    <%= link_to "Sign Up", new_user_registration_path %> or <%= link_to "Sign In", new_user_session_path %> to add a recipe.
  </p>
  </div>
<% end %>

<% @recipe.each_slice(3) do |recipes| %>
  <div class="row">
    <% recipes.each do |recipe| %>

        <div class="col-md-4">
          <div class="recipe">
            <div class="image_wrapper">
              <%= link_to recipe do %>
                <%= image_tag recipe.image.url(:medium) %>
              <% end %>
            </div>
            <h2>
              <%= link_to recipe.title, recipe %>
            </h2>
            <% if recipe.completed? %>
              <p style="opacity: 0.5;"> Recipe cooked <%= time_ago_in_words(recipe.completed_at) %> ago </p>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
<% end %>
